@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Articles</h1>

<form method="get">
    <p>
        <input type="text" name="searchString" value="@Model.SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>URL</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Title</td>
                <td><a href="@article.Url" target="_blank">@article.Url</a></td>
                <td>@article.Timestamp</td>
            </tr>
        }
    </tbody>
</table>
